#!/bin/bash

# XDG Vars
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_RUNTIME_DIR="$XDG_CACHE_HOME"

# Dir Vars
export DOCKER_CONFIG="$XDG_CONFIG_HOME"/docker
export GNUPGHOME="$XDG_DATA_HOME"/gnupg
export GOPATH="$XDG_DATA_HOME"/go
export _JAVA_OPTIONS=-Djava.util.prefs.userRoot="$XDG_CONFIG_HOME"/java
export NPM_CONFIG_USERCONFIG=$XDG_CONFIG_HOME/npm/npmrc
export PLTUSERHOME="$XDG_DATA_HOME"/racket
export WEECHAT_HOME="$XDG_CONFIG_HOME"/weechat
export HISTFILE="$XDG_DATA_HOME"/history
export LESSHISTFILE=-
export WGETRC="$XDG_CONFIG_HOME/wgetrc"
echo hsts-file \= "$XDG_CACHE_HOME"/wget-hsts >> "$XDG_CONFIG_HOME/wgetrc"
export XAUTHORITY="$XDG_RUNTIME_DIR"/Xauthority
export INPUTRC="$XDG_CONFIG_HOME/.inputrc"
export STACK_ROOT="$XDG_DATA_HOME"/stack
export ANDROID_SDK_HOME="$XDG_CONFIG_HOME"/android
export ADB_VENDOR_KEY="$XDG_CONFIG_HOME"/android
export GRADLE_USER_HOME="$XDG_DATA_HOME"/gradle
export CUDA_CACHE_PATH="$XDG_CACHE_HOME"/nv

# Personal Dirs
export DESKTOP="$HOME/dk"
export DOCUMENTS="$HOME/dx"
export DOWNLOAD="$HOME/dl"
export MUSIC="$HOME/mx"
export PICTURES="$HOME/px"
export PUBLICSHARE="$HOME/pl"
export TEMPLATES="$HOME/tl"
export VIDEOS="$HOME/vd"

