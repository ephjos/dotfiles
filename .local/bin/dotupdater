#!/bin/bash
#

REPO_LOC=$HOME/repos/dotfiles

mkdir -p $REPO_LOC

cp -v ~/.profile $REPO_LOC/
cp -v ~/.bashrc $REPO_LOC/

cp -v ~/.config/.*rc $REPO_LOC/.config/

cp -v ~/.config/nvim/* $REPO_LOC/.config/nvim/
cp -rv ~/.config/nvim/ultisnips $REPO_LOC/.config/nvim/
cp -rv ~/.config/nvim/templates $REPO_LOC/.config/nvim/

cp -rv ~/.local/bin/josephthomashines/* $REPO_LOC/.local/bin/josephthomashines

