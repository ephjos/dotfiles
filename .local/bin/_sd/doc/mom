#!/usr/bin/env bash

# build a groff mom document
# another line
# even another line!

set -euo pipefail

if [ $# -ne 1 ]; then
    echo "You need to specify the source file";
    exit 0;
fi

filename="$1";

if [ ! -f "$filename" ]; then
    echo "Source file does not exist";
    exit 0;
fi

# a test

filename_without_ext=`rev <<< "${filename}" | cut -d"." -f2- | rev`

echo "$filename"
echo "$filename_without_ext"

groff -Tpdf -R -mom "$filename" > "$filename_without_ext".pdf

