#!/usr/bin/env bash

# The power menu, a prompt to logout or shutdown

set -euo pipefail

function logout {
  choice=$(echo -e "No\nYes" | rofi -dmenu -p "Logout now?")
  [[ "$choice" == "Yes" ]] && \
    killall xinit
}

function shutdown {
  choice=$(echo -e "No\nYes" | rofi -dmenu -p "Shutdown now?")
  [[ "$choice" == "Yes" ]] && \
    shutdown now
}

choice=$(echo -e "Cancel\nLogout\nShutdown" | rofi -dmenu -p "Power menu")
case "$choice" in
  "Logout") \
    logout ;;
  "Shutdown") \
    shutdown ;;
esac
