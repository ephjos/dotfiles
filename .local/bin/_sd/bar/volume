#!/usr/bin/env bash

# Volume bar module

set -euo pipefail

# Prints the current volume or ﱝ if muted.
[ $(pamixer --get-mute) = true ] && echo ﱝ && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon=""
elif [ "$vol" -lt "30" ]; then
	icon=""
else
	icon=""
fi

echo "$icon $vol%"

