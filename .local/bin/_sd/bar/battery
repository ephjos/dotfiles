#!/usr/bin/env bash

# Battery capacity tracking bar module

set -euo pipefail

# Loop through all attached batteries.
for battery in /sys/class/power_supply/BAT?
do
  [[ "$battery" == *"?"* ]] && exit 0

	# Get its remaining capacity and charge status.
	capacity=$(cat "$battery"/capacity) || break
	status=$(sed "s/[Dd]ischarging/ğŸ”»/;s/[Nn]ot charging/âšª/;s/[Cc]harging/ğŸ”º/;s/[Uu]nknown/â“/;s/[Ff]ull/ğŸŸ¢/" "$battery"/status)

	# If it is discharging and 25% or less, we will add a â— as a warning.
	 [ "$capacity" -le 25 ] && [ "$status" = "ï•¾" ] && status="ï–‚"

	printf "ğŸ”‹%s %s%% " "$capacity" "$status"
	unset warn
done | sed 's/ *$//'
