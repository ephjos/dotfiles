#!/bin/bash

dir=${SD_ROOT:-"$HOME/.local/bin/_sd"}

function _sd_complete () {
  if \
    [ "cat" == "${COMP_WORDS[1]}" ] || \
    [ "edit" == "${COMP_WORDS[1]}" ] || \
    [ "help" == "${COMP_WORDS[1]}" ] || \
    [ "new" == "${COMP_WORDS[1]}" ] || \
    [ "which" == "${COMP_WORDS[1]}" ] \
    ; then
    unset "COMP_WORDS[1]";
    COMP_WORDS=("${COMP_WORDS[@]}")
  fi

  path="$dir/$(IFS=/ ; echo "${COMP_WORDS[@]:1}")";
  path="$(tr " " "/" <<< "$path")"
  if [ -e "$path" ]; then
    if [ -d "$path" ]; then
      files="$(ls "$path" | grep -v ".help" | tr '\n' ' ')"
      COMPREPLY=($(compgen -W "$files" ""))
    fi
  else
    up1="$(dirname "$path")"
    if [ -e "$up1" ]; then
      files="$(ls "$up1" | grep -v ".help" | tr '\n' ' ')"
      COMPREPLY=($(compgen -W "$files" "${COMP_WORDS[-1]}"))
    fi
  fi

}

complete -F _sd_complete sd
