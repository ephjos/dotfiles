
.PHONY: all ca oa a cl ol l cr or r

all:
	all2pdf
	all2slides

ca:
	md2pdf a.md
	md2slides a.md

oa: a.pdf a-slides.pdf
	open a.pdf
	open a-slides.pdf

a: ca oa


cl:
	md2pdf l.md
	md2slides l.md

ol: l.pdf l-slides.pdf
	open l.pdf
	open l-slides.pdf

l: cl ol

cr:
	md2pdf r.md
	md2slides r.md

or: r.pdf r-slides.pdf
	open r.pdf
	open r-slides.pdf

r: cr or



